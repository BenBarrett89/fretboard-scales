{% if params.submitOnChange %}
<select id="{{ params.name }}" name="{{ params.name }}" onchange="this.form.submit()">
{% else %}
<select id="{{ params.name }}" name="{{ params.name }}">
{% endif %}
  {% for option in params.options %}
  {% if option.selected %}
  <option value="{{option.value}}" selected>{{option.label}}</option>
  {% else %}
  <option value="{{option.value}}">{{option.label}}</option>
  {% endif %}
  {% else %}
  <option value="default">Default</li>
  {% endfor %}
</select>