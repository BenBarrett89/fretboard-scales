{% extends "template.njk" %}

{% from "components/dropdown/macro.njk" import dropdown %}
{% from "components/fretboard/macro.njk" import fretboard %}

{% set pageTitle = "Home" %}

{% block pageTitle %}
{{pageTitle}} - Fretboard Scales
{% endblock %}

{% block content %}
<section id='scale' title='Scale'>
  <form method="post">
    <input type="hidden" id="form" name="form" value="scale">
    <label for="tonic">Scale:</label>
    {{ dropdown(tonicsDropdown) }}
    {{ dropdown(scalesDropdown) }}
  </form>
</section>
<section id='fretboard' title='Fretboard'>
  {{ fretboard(fretboardParams) }}
</section>
{% endblock %}